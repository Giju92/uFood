<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/category_or_menu"/>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/buttonCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category"/>

        <RadioButton
            android:id="@+id/buttonDaily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daily_menu"/>
    </RadioGroup>

    <Spinner
        android:visibility="gone"
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"/>

    <EditText
        android:id="@+id/otherselection"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:textAppearance="@android:style/Widget.TextView.SpinnerItem"
        android:textSize="30dp"
        android:maxLength="30"
        android:singleLine="true"/>


    <ImageButton
        android:id="@+id/addimbutt"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/primary"
        android:src="@drawable/ic_check_white_24dp"/>

</LinearLayout>