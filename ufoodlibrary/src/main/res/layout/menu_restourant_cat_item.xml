<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

  >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <RelativeLayout
            android:id="@+id/firstLinear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:id="@+id/imageitem"
                android:background="@color/white"
                android:scaleType="centerInside"
                android:src="@drawable/drink_red"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/firstRelative"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
           >

            <TextView
                android:id="@+id/nameitem"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/primary_text"
                android:text="@string/ingredients"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp" />

            <TextView
                android:id="@+id/priceitem"
                android:layout_below="@+id/nameitem"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/primary_text"
                android:text="@string/ingredients"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/secondRelative"
            android:layout_alignParentBottom="true"
            android:text="ajejjejeje"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/offertItem"
                    android:background="@drawable/discount"
                    android:gravity="center"
                    android:text="53%"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
                <ImageButton
                    android:id="@+id/deleteItem"
                    android:layout_toRightOf="@+id/offertItem"
                    android:layout_marginLeft="12dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_action_delete"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>