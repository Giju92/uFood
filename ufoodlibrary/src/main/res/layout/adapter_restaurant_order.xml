<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardCornerRadius="25dp"
    android:elevation="20dp"
    android:id="@+id/card_order"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="7dp"
    android:layout_marginTop="8dp"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:id="@+id/card_layout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_time"
            android:layout_alignParentLeft="true"
            android:text="18:00"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_type"
            android:layout_toRightOf="@id/order_time"
            android:text="TAKE AWAY"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_status"
            android:layout_below="@id/order_type"
            android:text="pending"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="italic"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_name"
            android:layout_gravity="center_horizontal"
            android:text=" Mattia  Iannone"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_below="@id/order_status"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_communication_call"
            android:textColor="@color/light_blue"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/button_done"
            android:text="@string/done"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:layout_marginRight="0dp"
            android:background="@color/light_green"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:id="@+id/button_reject"
            android:text="@string/reject"
            android:textColor="@color/white"
            android:clickable="true"
            android:layout_below="@+id/button_done"
            android:layout_marginRight="0dp"
            android:background="@color/light_red"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
